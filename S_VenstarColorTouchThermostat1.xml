<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <serviceStateTable>
        <stateVariable sendEvents="yes">
            <name>Failure</name>
            <dataType>ui1</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>failure</shortCode>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>HomeAwayMode</name>
            <dataType>string</dataType>
            <defaultValue>Home</defaultValue>
            <shortCode>homeaway</shortCode>
        </stateVariable>
    </serviceStateTable>
    <actionList>
        <action>
            <name>SetHomeAway</name>
            <argumentList>
                <argument>
                    <name>newHomeAwayState</name>
                    <direction>in</direction>
                    <relatedStateVariable>HomeAwayMode</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
    </actionList>
</scpd>
